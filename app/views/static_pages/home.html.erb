<% if logged_in? %>
<div class="row">
  <aside class="row">
    <section class="user_info">
      <%= render 'shared/user_info' %>
    </section>
    <!--bao nhieu ng follow-->
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
    <!--day la post-->
    <section class="entry_form">
      <%= render 'shared/entry_form' %>
    </section>
  </aside>
  <!--day la entry feed-->
  <div class="row">
    <h3>Entry Feed</h3>
    <div class="row">  
      <%= render 'shared/feed' %>
    </div>
  </div>

</div>
<% else %>
<div class="center">
  <h2>Welcome to the Sample App</h2>
  <h2>
    This is the home page for the
    <a href="http://www.railstutorial.org/"> Ruby on Rails Tutorial</a>
    sample application
  </h2>
  
  <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
</div>
<div class="row">
  <h3>Entry Feed</h3>
  <div class="row">  
    <%= render 'shared/feed' %>
  </div>
</div>
<%= link_to image_tag("rails.png", alt: "Rails logo"),
'http://rubyonrails.org/' %>
<% end %>